// Partners

#event-partner
  background-color white

.event-partner-title
  color #333
  base_title()

.event-partner-content
  base_content()

.partner-list
  cf()
  margin-top 50px
  padding 0

.partner-item
  +above(641px)
    col(1/3, cycle: 3)
  +below(640px)
    col(1/2, cycle: 2)

  list-style none
  text-align center !important
  background-color #f9f9f9
  height 150px
  margin-bottom 3%
  line-height 150px

  img
    vertical-align middle
    max-width 100%
    height auto
