/*
  Components
*/
.event-button
  width 100%
  text-align center
  margin-bottom 75px

.button-main
  display inline-block
  font-family primary_font, sans-serif
  color white
  text-transform uppercase
  font-size 100%
  text-decoration none
  padding 15px 20px
  border 2px solid #93b93a
  border-radius 5px
  background-color transparent
  transition all .3s ease-out

  +below(330px)
    font-size .9em

  +below(500px)
    stack()
    box-sizing border-box
    margin-bottom 10px

  &:hover
    cursor pointer
    background-color #93b93a

.button-alt
  font-family primary_font, sans-serif
  color #333
  text-transform uppercase
  font-size 1em
  text-decoration none
  padding 15px 20px
  border 2px solid #333
  border-radius 5px
  background transparent
  transition all .3s ease-out

  +below(330px)
    font-size .9em

  +below(500px)
    stack()
    box-sizing border-box
    margin-bottom 10px

  &:hover
    cursor pointer
    color white
    background #333


.button-secondary
  +below(640px)
    stack()
  font-family primary_font, sans-serif
  color #333
  text-transform uppercase
  font-size 1em
  text-decoration none
  padding 15px 20px
  border 2px solid #333
  border-radius 5px
  background transparent
  transition all .3s ease-out

  &:hover
    cursor pointer
    color #82b927
    border 2px solid #333
    background #333
