//Mixins

base_title()
  font-size title_size
  +below(480px)
    font-size 2em
  text-transform uppercase
  font-weight bold
  text-align center
  padding-top 30px
  font-family primary_font, sans-serif

base_content()
  padding-bottom 50px
  font-size content_size
  text-align justify
  text-align left
  font-family main_font, sans-serif

base_button()
  font-family primary_font, sans-serif
  text-transform uppercase
  font-size 1em
  text-decoration none
  padding 15px 20px
  border-radius 5px
  background-color transparent
  transition all .3s ease-out

  +below(330px)
    font-size .9em

  +below(500px)
    stack()
    box-sizing border-box
    margin-bottom 10px

  &:hover
    cursor pointer
