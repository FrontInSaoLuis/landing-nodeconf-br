// NewsLetter

#event-newsletter
  background-color #82b927

.event-newsletter-title
  color #333
  base_title()

.event-newsletter-content
  base_content()
  font-size 1em

.event-newsletter-signup
  cf()
  .newsletter-input
    font-family primary_font, sans-serif
    font-size 1em
    color #333
    border 0
    line-height 50px
    box-sizing border-box
    border-radius 5px
    padding-left 15px
    padding-right 15px
    +above(641px)
      col(2/5, gutter: 1)
      shift()

    +below(640px)
      margin-bottom 7px
      stack()

  .newsletter-button
    text-align center !important
    +above(641px)
      col(1/5, gutter: 1)
      shift()

    +below(640px)
      margin-bottom 7px
      stack()
